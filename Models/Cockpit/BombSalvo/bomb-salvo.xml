<?xml version="1.0"?>
<PropertyList>

 <path>bomb-salvo.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>right-salvo</object-name>
        <property>/controls/armament/salvo-right</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>6</dep>
            </entry>
        </interpolation>
        <center>
          <x-m>-0.035</x-m>
          <y-m>0.0</y-m>
          <z-m>-0.19</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

        <animation>
        <type>rotate</type>
        <object-name>left-salvo</object-name>
        <property>/controls/armament/salvo-left</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>6</dep>
            </entry>
        </interpolation>
        <center>
          <x-m>-0.02</x-m>
          <y-m>0.0</y-m>
          <z-m>-0.19</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>


  <animation>
  <type>material</type>
  <object-name>left-salvo</object-name>
  <object-name>right-salvo</object-name>
  <object-name>bracket</object-name>
  <object-name>lower-bolt</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.28</red>
    <green>0.18</green>
    <blue>0.18</blue>
  </emission>
 </animation>

</PropertyList>